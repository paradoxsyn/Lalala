<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/patternoflife">

    <Button
        android:id="@+id/button_1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal|center"
        android:textSize="24dp"
        android:textColor="@color/choose_level_ryze"
        android:background="@drawable/level_button_shape_ryze"
        android:text="@string/level_1">

    </Button>
    <Button
        android:id="@+id/button_2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal|center"
        android:textSize="24dp"
        android:clickable="false"
        android:textColor="@color/choose_level_ryze"
        android:background="@drawable/level_button_shape_ryze_lock"
        android:text="@string/level_2">

    </Button>
    <Button
        android:id="@+id/button_3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal|center"
        android:textSize="24dp"
        android:clickable="false"
        android:textColor="@color/choose_level_ryze"
        android:background="@drawable/level_button_shape_ryze_lock"
        android:text="@string/level_3">

    </Button>
    <Button
        android:id="@+id/button_4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal|center"
        android:textSize="24dp"
        android:clickable="false"
        android:textColor="@color/choose_level_ryze"
        android:background="@drawable/level_button_shape_ryze_lock"
        android:text="@string/level_4">

    </Button>

</LinearLayout>